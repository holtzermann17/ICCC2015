\documentclass[tikz,border=5]{standalone}
\usetikzlibrary{quotes,decorations.text}

\tikzset{
%%
  pics/uarc/.style args={#1:#2:#3:#4}{
    code={
      \draw[pic actions] (#1:#3) arc(#1:#2:#3) node [above,pos=0.8,sloped, fill=none] {#4};
    }
  },
%%
  pics/darc/.style args={#1:#2:#3:#4}{
    code={
      \draw[pic actions] (#1:#3) arc(#1:#2:#3) node [below,pos=0.8,sloped, fill=none] {#4};
    }
  }
}
\begin{document}
\begin{tikzpicture}
  \draw[thick] (4,0) pic[red, -latex]{darc=100:260:1.3cm:Chicken}
                     pic[red, -latex]{uarc=280:450:1.3cm:Egg};

  \draw[thick] (8,0) pic[red, -latex]{darc=100:260:1.3cm:Statement}
                     pic[red, -latex]{uarc=280:450:1.3cm:Response};
\end{tikzpicture}
\end{document}
